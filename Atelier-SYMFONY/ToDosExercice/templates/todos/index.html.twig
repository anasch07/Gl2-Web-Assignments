<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/solar/bootstrap.min.css" integrity="sha384-NCwXci5f5ZqlDw+m7FwZSAwboa0svoPPylIW3Nf+GBDsyVum+yArYnaFLE9UDzLd" crossorigin="anonymous">
    <title>{{ controller_name }}</title>
</head>
<body>
<div class="container">
    {% for value in  app.session.flashBag.get('info')%}
        <div class="alert alert-info">
            <h3>  {{ value }} </h3>
        </div>
    {% endfor %}
    {% for value in  app.session.flashBag.get('success')%}
        <div class="alert alert-success">
            <h3>  {{ value }} </h3>
        </div>
    {% endfor %}
    {% for value in  app.session.flashBag.get('error')%}
        <div class="alert alert-danger">
            <h3>  {{ value }} </h3>
        </div>
    {% endfor %}

    <h2>ToDos List</h2>

    <ol class="list-group">
        {% for key,value in app.session.get('todos') %}
            <li class="list-group-item">
                <b>{{ key }}</b>
                <p>{{ value }}</p>
            </li>
        {% endfor %}
    </ol>
</div>
</body>
</html>